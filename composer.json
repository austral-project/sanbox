{
  "name": "austral/sandbox",
  "description": "Sandbox development Austral Symfony Bundle",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-pcntl": "*",
    "ext-pgsql": "*",
    "ext-fileinfo": "*",
    "ext-exif": "*",
    "ext-sodium": "*",
    "composer/package-versions-deprecated": "1.11.99.1",
    "phpdocumentor/reflection-docblock": "^5.3",
    "symfony/asset": "5.4.*",
    "symfony/expression-language": "5.4.*",
    "symfony/flex": "^1.3.1",
    "symfony/intl": "5.4.*",
    "symfony/mailer": "5.4.*",
    "symfony/mime": "5.4.*",
    "symfony/monolog-bundle": "^3.1",
    "symfony/notifier": "5.4.*",
    "symfony/property-access": "5.4.*",
    "symfony/property-info": "5.4.*",
    "symfony/security-bundle": "5.4.*",
    "symfony/translation": "5.4.*",
    "symfony/validator": "5.4.*",
    "symfony/web-link": "5.4.*",
    "symfony/webpack-encore-bundle": "1.8.0",
    "symfony/messenger":  "5.4",

    "austral/admin-bundle": "3.*",
    "austral/website-bundle": "3.*",
    "austral/email-bundle": "3.0.*",
    "austral/notify-bundle": "3.0"
  },
  "require-dev": {
    "symfony/css-selector": "^5.4",
    "symfony/phpunit-bridge": "^5.4",
    "symfony/browser-kit": "^5.4",
    "symfony/debug-bundle": "^5.4",
    "symfony/stopwatch": "^5.4",
    "symfony/var-dumper": "^5.4",
    "symfony/web-profiler-bundle": "^5.4"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "symfony/runtime": true,
      "symfony/flex": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "austral:entity:initialise-bundle": "symfony-cmd",
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts",
      "php bin/console doctrine:database:create --if-not-exists",
      "php bin/console doctrine:schema:update --force",
      "php bin/console austral:security:user --email=${ADMIN_EMAIL:=support@austral.dev} --username=${ADMIN_USERNAME:=admin} --password=${ADMIN_PASSWORD:=admin} --create --root --if-not-exist",
      "php bin/console austral:admin:roles --generate",
      "npm install",
      "npm run build"
    ],
    "post-update-cmd": [
      "@auto-scripts",
      "npm update",
      "npm run build"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "prefer-stable": true,
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.4.*"
    }
  }
}
